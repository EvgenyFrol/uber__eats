include data.pug
include logo__link.pug
include about.pug
include help.pug
include store.pug
include footer.pug

doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width initial-scale=1")
    script
      include ../js/jquery-3.4.1.js

  body
    header.header
      .header__wrapper
        a(href="/")
          img.header__logo(src="/images/logo.png" alt="Uber Eats Logo")

        .header__button
          button.header__button.button.button__autorize(href="#") Войти
          button.header__button.button.button__basket(href="#")
            img(src="/images/basket.png")

    section.search
      .search__wrapper
        input.search__input(type="text" placeholder="Поиск по ресторанам и кухням" alt="input__search" name="searcher" )

    section.menuFood
      .menuFood__wrapper
        h1.menuFood__title.title Рестораны в Москве
        .menuFood__foodCardContent
          each item in foodCards
            .menuFood__foodCardCenter
              .menuFood__foodCard
                figure
                  img.menuFood__foodCardImage(src= item.image, alt= item.title)
                  figcaption
                    h2.menuFood__foodCardTitle= item.title
                    p.menuFood__foodCardDescription= item.desc
                    p.menuFood__foodCardDelivery= item.delivery

    footer.footer
      .footer__wrapper
        .footer__logoImg
          img.footer__logo(src="/images/footer-logo.png" alt="footer__logo")

        .footer__menu
          .footer__socialLink
            select.footer__selectLang
              .footer__selectLangWorld
              option.footer__selectText(value="1") Русский
              option.footer__selectText(value="2") English
            p.footer__selectLang--text #
              span.footer__span UberEats
            .footer__selectLangSocial
              each item in logoLink
                a(href= item.href target="_blank")
                  img.footer__selectLangSocialLink(src= item.logo alt= item.alt)

          .footer__aboutUberEats
            each item in dataAbout
              a.footer__aboutUberEatsLinks.footer__links(href="#")= item.link

          .footer__help
            each item in information
              a.footer__helpLinks.footer__links(href="#")= item.inf

        .footer__app
          each item in appStore
            button.footer__button.button__app
              a(href= item.link target="_blank")
                img.app__logo(src= item.logo alt="app__logo")

        .footer__footer
          each item in foot
            p.footer__footerText= item.text

    button.scrollTo(href="#")
      img.scrollToImage(src="/images/button__up.png")
